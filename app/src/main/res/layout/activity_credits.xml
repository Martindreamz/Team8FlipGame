<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CreditsActivity">

    <TextView
        android:id="@+id/credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/credit"
        android:textSize="60dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:id="@+id/Team8"
        app:layout_constraintTop_toBottomOf="@id/credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/team8Members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Team 8 Members"
            android:textSize="40dp"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/memberNames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/Team8"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/Members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="44dp"
            android:text="@string/members"
            android:textAlignment="center"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/team8Members"
            tools:layout_editor_absoluteX="0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/songLicense"
        app:layout_constraintTop_toBottomOf="@id/memberNames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/memberNames"
            android:text="@string/Licenses"
            android:textSize="40dp"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/licenseDetails"
        app:layout_constraintTop_toBottomOf="@id/songLicense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/licenseDetails"
            android:text="@string/lincense_detail"
            android:textSize="30dp"
            android:textAlignment="center"/>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>